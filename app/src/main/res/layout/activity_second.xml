<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secndAbackground"
    tools:context=".SecondActivity">
    
    <Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/toolbarGrey">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img"
android:layout_gravity="center"
            />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"/>
    </Toolbar>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:id="@+id/tv_policies"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:text="Policies"
        android:textSize="31sp"
        android:textStyle="bold"
        android:textColor="@color/toolbarGrey"
        android:layout_marginTop="50dp"/>


    <LinearLayout
        android:id="@+id/content_Ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/tv_policies"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Policy"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:paddingVertical="15dp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:textAlignment="textStart"
        android:textColor="@color/toolbarGrey"
        android:drawableEnd="@drawable/ic_right"
        android:background="@drawable/buttons"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Product Category"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:paddingVertical="15dp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/toolbarGrey"
            android:drawableEnd="@drawable/ic_right"
            android:background="@drawable/buttons"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Origin Country"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:paddingVertical="15dp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/toolbarGrey"
            android:drawableEnd="@drawable/ic_right"
            android:background="@drawable/buttons"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="Brand"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:paddingVertical="10dp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/toolbarGrey"
            android:drawableEnd="@drawable/ic_right"
            android:background="@drawable/buttons"/>

        <TextView
            android:id="@+id/tv_resultFromMainA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Policies"
            android:textSize="31sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/toolbarGrey"
            android:layout_marginTop="50dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/secondA_btn_destroy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Export as CSV"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:paddingHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingVertical="15dp"
            android:background="@drawable/buttons"
            android:backgroundTint="@color/pink_btn"
            android:textColor="@color/white"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country of Origin"
            android:drawableEnd="@drawable/ic_down"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Category"
            android:layout_marginHorizontal="15dp"
            android:drawableEnd="@drawable/ic_down"
            android:textStyle="bold"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>